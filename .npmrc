# Configuration pnpm pour le monorepo
# Utiliser le workspace protocol pour les dépendances internes
link-workspace-packages=true

# Hoisting des dépendances communes
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=*turbo*

# Ne pas hoister certaines dépendances spécifiques
shamefully-hoist=false

# Auto-install peers
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false

