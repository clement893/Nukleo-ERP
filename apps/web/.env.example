# Environment Variables Configuration
# Copy this file to .env.local and fill in the values

# Node environment (development, production, test)
# Example: development
NODE_ENV=development

# Base URL of the application
# Example: http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# Secret key for NextAuth encryption (generate with: openssl rand -base64 32)
# Example: your-secret-key-here
NEXTAUTH_SECRET=

# Google OAuth Client ID
# Example: your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_ID=

# Google OAuth Client Secret
# Example: your-google-client-secret
GOOGLE_CLIENT_SECRET=

# Secret key for JWT token signing (generate with: openssl rand -base64 32)
# Example: your-jwt-secret-key-here
JWT_SECRET=

# JWT token issuer
# Default: modele-app
JWT_ISSUER=modele-app

# JWT token audience
# Default: modele-users
JWT_AUDIENCE=modele-users

# Access token expiration time (e.g., 15m, 1h)
# Default: 15m
JWT_ACCESS_TOKEN_EXPIRES=15m

# Refresh token expiration time (e.g., 7d, 30d)
# Default: 30d
JWT_REFRESH_TOKEN_EXPIRES=30d

# Comma-separated list of allowed email domains for OAuth (optional)
# Example: example.com,company.com
ALLOWED_EMAIL_DOMAINS=

# Database connection URL
# Example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=

# Base URL for the backend API
# Default: http://localhost:8000
# Example: https://api.example.com
API_BASE_URL=http://localhost:8000
