# API Configuration
# Required: Set this to your backend API URL
# Development: http://localhost:8000
# Production: Set this to your production backend URL (e.g., https://your-backend.railway.app)
# 
# Optional: NEXT_PUBLIC_DEFAULT_API_URL can be used as a fallback if NEXT_PUBLIC_API_URL is not set
# This is useful for templates where the production URL is not known at build time
NEXT_PUBLIC_API_URL=http://localhost:8000
# NEXT_PUBLIC_DEFAULT_API_URL=https://your-backend.railway.app

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-this-secret-key-in-production

# OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe (Frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Sentry Error Tracking & Performance Monitoring
# Get your DSN from https://sentry.io/settings/{org}/projects/{project}/keys/
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_RELEASE=
# Enable Sentry in development (set to 'true' to enable)
SENTRY_ENABLE_DEV=false
NEXT_PUBLIC_SENTRY_ENABLE_DEV=false
# Enable Sentry debug mode (set to 'true' for verbose logging)
SENTRY_DEBUG=false
