# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for cross-platform compatibility
*.sh text eol=lf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Python
*.py text eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Markdown
*.md text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Config files
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf
