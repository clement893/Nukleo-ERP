{
  "name": "modele-nextjs-fullstack",
  "version": "1.0.0",
  "description": "Full-stack template with Next.js 16 frontend and FastAPI backend",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:full": "node scripts/dev.js",
    "dev:frontend": "node scripts/dev.js --frontend-only",
    "dev:backend": "node scripts/dev.js --backend-only",
    "build": "turbo run build --filter=...",
    "build:web": "turbo run build --filter=@modele/web",
    "build:types": "turbo run build --filter=@modele/types",
    "build:clean": "turbo run clean && pnpm build",
    "build:optimized": "node scripts/build-optimized.js",
    "test": "turbo run test --parallel",
    "test:web": "turbo run test --filter=@modele/web",
    "test:e2e": "turbo run test:e2e --filter=@modele/web",
    "lint": "turbo run lint --parallel",
    "lint:fix": "turbo run lint --parallel -- --fix",
    "format": "turbo run format --parallel",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "turbo run type-check --parallel",
    "clean": "turbo run clean && rm -rf node_modules/.cache .turbo",
    "clean:all": "turbo run clean && rm -rf node_modules .turbo apps/*/node_modules packages/*/node_modules",
    "pre-commit": "node scripts/pre-commit.js",
    "pre-commit:skip-tests": "node scripts/pre-commit.js --skip-tests",
    "check": "node scripts/check.js",
    "check:fix": "node scripts/check.js --fix",
    "setup:hooks": "node scripts/setup-hooks.js",
    "generate:component": "node scripts/generate-component.js",
    "generate:page": "node scripts/generate-page.js",
    "generate:api": "node scripts/generate-api-route.js",
    "migrate": "node scripts/migrate-db.js",
    "workspace:upgrade": "pnpm up -r -L",
    "workspace:check": "pnpm list --depth=0 -r",
    "workspace:verify": "node scripts/check-workspace.js"
  },
  "workspaces": [
    "apps/*",
    "backend",
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^2.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  }
}
